<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/boldcenturygothic"
        android:text="@string/username"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />


    <View
        android:id="@+id/view"
        android:layout_width="316dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:background="#C8C8C8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <View
        android:id="@+id/view2"
        android:layout_width="327dp"
        android:layout_height="153dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/boldcenturygothic"
        android:text="8938 Pts."
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.01"
        android:textColor="#BF3939"
        app:layout_constraintStart_toStartOf="@+id/rank_text"
        app:layout_constraintTop_toBottomOf="@+id/rank_text" />

    <ProgressBar
        android:id="@+id/progressWheel"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:progress="80"
        android:progressDrawable="@drawable/circle"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/Percentile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/boldcenturygothic"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.01"
        android:text="87th Percentile"
        android:textColor="#B80C9C"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/progressWheel"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/rank_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/boldcenturygothic"
        android:text="WUs: 12900"
        android:shadowColor="#000000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="0.01"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="@+id/Percentile_text"
        app:layout_constraintTop_toBottomOf="@+id/Percentile_text" />

    <View
        android:id="@+id/divider"
        android:layout_width="187dp"
        android:layout_height="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:background="@color/sony_gray"
        app:layout_constraintStart_toEndOf="@+id/progressWheel"
        app:layout_constraintTop_toBottomOf="@+id/Percentile_text" />

    <View
        android:id="@+id/divider2"
        android:layout_width="187dp"
        android:layout_height="6dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/sony_gray"
        app:layout_constraintStart_toEndOf="@+id/progressWheel"
        app:layout_constraintTop_toBottomOf="@+id/rank_text" />

</androidx.constraintlayout.widget.ConstraintLayout>